{
  "manifest_version": 2,

  "name": "Android Notifications",
  "description": "This extension will syn Android Notifications with this desktop",
  "version": "1.0",

  "browser_action": {
    "default_icon": "notification.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],

   "content_scripts": [{
     "js": ["./js/firebase.js", "./js/firebaseIO.js", "./js/notification.js", "./js/jquery-3.1.1.min.js"],
     "matches": ["http://*/*", "https://*/*", "https://*.firebase.com/*"]
   }]
}
